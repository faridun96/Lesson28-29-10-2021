<form method="post" asp-action="Create" asp-controller="Product">
    <div asp-validation-summary="All" />
    <label>Product</label>
    <input class="form-control" asp-for="Model" />
    <span asp-validation-for="Model"></span>
    <br />
    <label>Cost</label>
    <input class="form-control" asp-for="Cost" />
    <span asp-validation-for="Cost"></span> <br />
    <input class="btn btn-success" type="submit" title="Create" value="Create" />
    <input class="btn btn-danger" type="reset" title="" value="Cancel" />
</form>
